    "server": {
      "Properties": {
        "AvailabilityZone": "<%= @availability_zone %>",
        "ImageId": {
          "Ref": "Ami"
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "KeyName"
        },
        "SecurityGroups": [
          "global",
          {
            "Fn::Join": [
              "-",
              [
                {
                  "Ref": "Environment"
                },
                {
                  "Ref": "Application"
                }
              ]
            ]
          },
          {
            "Ref": "ServiceSecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                <%= user_data('db.sh', vartest: 'foo') %>,
                <%= user_data('db2.sh') %>
              ]
            ]
          }
        }
      },
      "Type": "AWS::EC2::Instance"
    }
